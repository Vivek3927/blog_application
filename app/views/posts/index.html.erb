<%= render "shared/flash_message", notice: notice %>

<div class="container">
  <div class="row">
    <div class="row">
      <div class="col-lg-12 d-flex justify-content-between">
        <h1 class="text-center">Posts</h1>
        <%= link_to "New post", new_post_path, class: "btn btn-primary align-self-center" %>
      </div>
    </div>
    <hr>
    <% if @posts.present? %>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Published Date</th>
            <th scope="col">Content</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td><%= post.published_date.strftime("%d/%m/%Y") %></td>
              <td><%= post.content.truncate(30) %></td>
              <td><%= link_to "Show", post, class: "btn btn-outline-secondary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="row">
        <div class="col-md-8 mx-auto">
          <%= image_tag ("no_data.jpg"), class: "rounded mx-auto d-block" %>
          <%# <h6 class="text-center text-muted">No data available</h6> %>
        </div>
      </div>
    <% end %>
  </div>
</div>
