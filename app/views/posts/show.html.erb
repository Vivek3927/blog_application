<%= render 'shared/flash_message', notice: notice %>

<div class="row">
  <div class="col-md-12 mx-auto p-3 shadow">
    <div class="card">
      <div class="row">
        <div class="col-md-6">
          <%= image_tag @post.image, class: "card-img w-50 h-50" if @post.image.present? %>
        </div>
        <div class="col-md-6">
          <%= video_tag @post.video, size: "320x240", controls: true if @post.video.present? %>
        </div>
      </div>
      <div class="card-body">
        <%= render @post %>
        <% if @post.user == current_user %>
          <hr>
          <div class="col-md-12 m-3">
            <div class="row">
              <div class="col-md-4">
                <%= link_to "Edit", edit_post_path(@post), class: "btn btn-outline-primary" %>            
              </div>
              <div class="col-md-4">
                <%= link_to "Back", root_path, class: "btn btn-outline-dark" %>
              </div>
              <div class="col-md-4">
                <%= link_to "Delete", post_path(@post), class: "btn btn-outline-danger", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
              </div>
            </div>
          </div>
        <% end %>  
      </div>
    </div>
  </div>
</div>

<div class="row mt-3 mb-3">
  <div class="col-md-12 shadow p-3">
    <h2>Comments</h2>
    <%= render "comments/comment", post: @post %>
  </div>
</div>

<div class="row mt-3 mb-3">
  <div class="col-md-12 mx-auto p-3 shadow">
    <div class="card p-3">
      <h2>Add a comment:</h2>
      <%= render "comments/form", post: @post %>
    </div>
  </div>
</div>
